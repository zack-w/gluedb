<fieldset>
  <div class="row">
    <div class="col-md-2">
      <span class="help-block">Gender</span>
      <%= m.input :gender, as: :select, collection: Member::GENDER_TYPES, include_blank: "Select" %>
    </div>
    <div class="col-md-offset-1 col-md-2">
      <span class="help-block">Social Security No.</span>
      <%= m.input :ssn, as: :string, title: "SSN", placeholder: "SSN", input_html: { value: number_to_ssn(m.object.ssn), maxlength: 11 } %>
    </div>
    <div class="col-md-6">
      <span class="help-block">Date of Birth</span>
      <div class="input-group col-sm-4">
        <span class="input-group-btn">
          <button class="btn" type="button"><span class="fui-calendar"></span></button>
        </span>
        <%= m.input_field :dob, as: :string,
          start_year: Date.today.year - 110, 
          end_year: Date.today.year, 
          placeholder: "mm/dd/yyyy",
          class: "date_picker",
          value: m.object.dob.try(:strftime, "%m/%d/%Y")
        %>
      </div>
    </div>
  </div>
  <hr/>
</fieldset>

